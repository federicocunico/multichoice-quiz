{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Generate quizzfile json",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/generate_quizfile.py",
            "args": [
                "questions.txt"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Quiz Start (legacy)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/quizgame.py",
            "args": [
                "questions",
                "--randomize"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Quiz Start",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "questions.txt",
                "--randomize"
            ],
            "console": "integratedTerminal"
        }
    ]
}